<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="msanchezS7.Vistas.ActEliminar"
             Title="ActEliminar">
    <VerticalStackLayout Spacing="20" Padding="25">
        <Label 
            Text="Actualizar/Eliminar Estudiante"
            FontSize="24"
            HorizontalTextAlignment="Center"/>


        <Entry x:Name="txtCodigo"
            IsReadOnly="True"/>

        <Entry x:Name="txtNombre"
            Placeholder="ingrese el nombre"/>

        <Entry x:Name="txtApellido"
        Placeholder="Ingrese el apellido"/>

        <Entry x:Name="txtEdad"
        Placeholder="Ingrese la edad"/>


        <Button x:Name="btnActualizar" Text="ACTUALIZAR"
                Clicked="btnActualizar_Clicked"/>

        <Button x:Name="btnEliminar" Text="ELIMINAR"
                Clicked="btnEliminar_Clicked"/>






    </VerticalStackLayout>
</ContentPage>